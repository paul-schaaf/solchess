{
  "name": "solchess",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "testnetDefaultChannel": "v1.3.15",
  "scripts": {
    "deploy": "babel-node src/client/deploy.js",
    "create-game": "babel-node src/client/createGame.js",
    "join-game": "babel-node src/client/joinGame.js",
    "make-move": "babel-node src/client/makeMove.js",
    "clean:deploy": "rm -f store/deploy.json",
    "lint": "npm run pretty && eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "watch 'npm run lint:fix' . --wait=1",
    "flow": "flow",
    "flow:watch": "watch 'flow' . --wait=1 --ignoreDirectoryPattern=/doc/",
    "bpf-sdk:update": "solana-bpf-sdk-install node_modules/@solana/web3.js && npm run clean",
    "clean": "npm run clean:program-rust",
    "build": "./src/program-rust/do.sh build && npm run clean:deploy",
    "clean:program-rust": "./src/program-rust/do.sh clean && rm -rf ./dist && npm run clean:deploy",
    "test:program-rust": "./src/program-rust/do.sh test",
    "cluster:localnet": "npm run clean:store && rm -f .env",
    "cluster:devnet": "npm run clean:store && cp cluster-devnet.env .env",
    "cluster:testnet": "npm run clean:store && cp cluster-testnet.env .env",
    "cluster:mainnet-beta": "npm run clean:store && cp cluster-mainnet-beta.env .env",
    "localnet:update": "solana-localnet update",
    "localnet:up": "set -x; solana-localnet down; set -e; solana-localnet up",
    "localnet:down": "solana-localnet down",
    "localnet:logs": "solana-localnet logs -f",
    "pretty": "prettier --write '{,src/**/}*.js'",
    "postinstall": "npm run bpf-sdk:update && cargo update --manifest-path=src/program-rust/Cargo.toml"
  },
  "devDependencies": {
    "prettier": "^2.0.2"
  },
  "dependencies": {
    "@solana/web3.js": "^0.78.2",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "buffer-layout": "^1.2.0",
    "dotenv": "8.2.0",
    "eslint": "^6.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-react": "^7.11.1",
    "json-to-pretty-yaml": "^1.2.2",
    "mkdirp-promise": "^5.0.1",
    "mz": "^2.7.0",
    "watch": "^1.0.2"
  },
  "engines": {
    "node": "11.x"
  }
}
